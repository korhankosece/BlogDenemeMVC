@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model BlogProject.Models.VM.BlogCategoryVM

<div class="form-horizontal">
    <h4>Edit New Category</h4>
    <hr />

    <form action="/AdminBlogCategory/Edit/@Model.ID" method="post">
        @Html.HiddenFor(q => q.ID)
        <div class="form-group">
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Name</label>
                @Html.TextBoxFor(q => q.Name, new { @class = "form-control", @id = "formGroupExampleInput" })
                @*<input type="text" class="form-control" id="formGroupExampleInput" placeholder="Buraya yazın..">*@
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
