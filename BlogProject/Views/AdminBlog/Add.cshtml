@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model BlogProject.Models.VM.BlogCreateVM

<div class="form-horizontal">
    <h4>Add New Category</h4>
    <hr />

    <form action="/AdminBlog/AddBlog" method="post">
        <div class="form-group">
            @Html.ValidationSummary()
            <div class="mb-3">
                <label class="form-label">Title</label>
                @Html.TextBoxFor(q => q.Title, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label class="form-label">Subtitle</label>
                @Html.TextBoxFor(q => q.Subtitle, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label class="form-label" for="categories">Category Name</label>
                @Html.DropDownListFor(model => model.CategoryId, Model.Categories.Select(x => new SelectListItem { Text = x.Name, Value = x.ID.ToString() }))
                
            </div>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

